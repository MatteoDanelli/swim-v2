<persistence
 xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	
 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence" version="1.0">
	
 <persistence-unit name="Swimv2"> <!-- DA usare quando devo chiamare l'entity manager -->
	
 	
 <jta-data-source>java:/Swimv2</jta-data-source>
	
 	
 <properties>
	
 	
 	
 <property name="hibernate.hbm2ddl.auto" value="create-drop" /> <!-- Ad ogni creazione dell'istanza server elimino tutto il precedente -->
	
 	
 </properties>
	
 </persistence-unit>
</persistence>
